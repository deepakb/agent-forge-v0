{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@agent-forge/shared": ["packages/shared/src"],
      "@agent-forge/core": ["packages/core/src"],
      "@agent-forge/llm-provider": ["packages/llm-provider/src"]
    }
  },
  "references": [
    { "path": "packages/shared" },
    { "path": "packages/core" },
    { "path": "packages/llm-provider" }
  ],
  "files": [],
  "exclude": ["**/node_modules", "**/dist"]
}
